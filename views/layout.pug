doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')

    title= `${title}`
    link(rel='stylesheet', href='https://cdn.rtlcss.com/bootstrap/v4.2.1/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/styles.css')

  body
    <!-- Navigation --!>
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.static-top
      div.container
        a.navbar-brand(href="#") MoneySave
        button.navbar-toggler(type='button', data-toggle="collapse", data-target="#navbarResponsive", aria-controls="navbarResponsive", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon

        div.collapse.navbar-collapse#navbarResponsive
          ul.navbar-nav.ml-auto
            li.nav-item.active#summary
              a.nav-link(href="#") סקירה
            li.nav-item#trans
              a.nav-link(href="#") עסקות
            li.nav-item#shared
              a.nav-link(href="#") הזמנות משותפות

    <!-- Page content --!>
    div.container
      div.row
        block content

    <!--  Bootstrap core JS --!>
    script(src="https://cdn.rtlcss.com/bootstrap/v4.2.1/js/bootstrap.min.js")
    script(src="/js/jquery.slim.min.js")
    script(src="/js/menu.js")
