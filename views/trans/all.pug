extends layout

block content
  -data = data || {}

  if action
    div.row
      p !{action}, !{result}

  div.row
    a.btn.btn-primary(href="/trans/create") הוספה

  if (trans_list.length != 0)
    div.row
      table.table.table-striped
        thead
          tr
            th(scope="col") תאריך
            th(scope="col") סוג
            th(scope="col") סכום
            th(scope="col") שם
            th(scope="col") תגיות
            th(scope="col") פעולות
        tbody
          each transaction in trans_list
            tr
              td !{moment(transaction.datetime).format("DD/MM/YYYY HH:mm")}
              td
                if (transaction._transaction_type.is_outcome == true)
                  p הוצאה
                else
                  p הכנסה
              td !{transaction.sum} ₪
              td !{transaction._transaction_type.title}
              td 
                if (transaction._transaction_type._transaction_tag != null)
                  p !{transaction._transaction_type._transaction_tag.title}
              td
                a.btn.btn-primary(href="/trans/"+transaction._id+"/delete") מחק
  else
    div.row
      p לא נמצאו עסקות.
